<% if notice %>
<p id="notice"><%= notice %></p>
<% end %>

<h1>Your Pragmatic Catalog</h1>

<% @products.each do |product| %>
  <div class="entry">
    <%= image_tag(product.image_url) %>
    <h3><%= product.title %></h3>
    <%= sanitize(product.description) %>
    <div class="price_line">
      <span class="price"><%= number_to_currency(product.price,options={unit:"USD",format:"%n %u"})%></span>
    </div>
    <% if(product.onlineQuantity==0)%>
      <b>Available In Store Only</b>
        <%end%>
    <% if(product.storeQuantity==0)%>
        <b>Available In Online Only</b>
    <%end%>
  </div>
<% end %>
